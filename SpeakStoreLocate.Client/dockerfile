# Build stage
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files (Client directory)
COPY SpeakStoreLocate.Client/package*.json ./
RUN npm ci

# Copy source
COPY SpeakStoreLocate.Client/src ./src
COPY SpeakStoreLocate.Client/angular.json ./
COPY SpeakStoreLocate.Client/tsconfig*.json ./

# Build Angular app for production
RUN npm run build

# Runtime stage
FROM nginx:alpine

# Remove default nginx config
RUN rm /etc/nginx/conf.d/default.conf

# Copy custom nginx config
COPY SpeakStoreLocate.Client/nginx.conf /etc/nginx/conf.d/nginx.conf

# Copy built app from builder
COPY --from=builder /app/dist/speak-store-locate-client /usr/share/nginx/html

# Copy entrypoint script
COPY SpeakStoreLocate.Client/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Create default assets/env.js
RUN mkdir -p /usr/share/nginx/html/assets && \
    echo 'window.__env = window.__env || {};' > /usr/share/nginx/html/assets/env.js

EXPOSE 80

ENTRYPOINT ["/entrypoint.sh"]
CMD ["nginx", "-g", "daemon off;"]
