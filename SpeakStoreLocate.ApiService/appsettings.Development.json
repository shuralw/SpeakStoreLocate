{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Deepgram": "Warning",
        "System.Net.Http.HttpClient": "Warning",
        "System.Net.Http": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentUserName"
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/general.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14,
          "outputTemplate": "[Serilog {Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Properties": {
      "Application": "SpeakStoreLocate.ApiService"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:4200",
      "https://localhost:4200",
      "http://localhost:5471",
      "https://localhost:5471",
      "http://localhost:3000",
      "https://localhost:3000",
      "http://127.0.0.1:4200",
      "http://127.0.0.1:5471",
      "http://127.0.0.1:3000"
    ]
  }
}
