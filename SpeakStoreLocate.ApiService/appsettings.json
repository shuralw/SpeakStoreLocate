{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentUserName"
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/general.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14,
          "outputTemplate": "[Serilog {Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Properties": {
      "Application": "SpeakStoreLocate.ApiService"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:4200",
      "https://localhost:4200",
      "http://localhost:5471",
      "https://localhost:5471",
      "http://localhost:3000",
      "https://localhost:3000",
      "https://speakstorelocate.de",
      "https://www.speakstorelocate.de",
      "https://master.d3rpyrl3qamh1s.amplifyapp.com",
      "http://master.d3rpyrl3qamh1s.amplifyapp.com",
      "master.d3rpyrl3qamh1s.amplifyapp.com"
    ]
  },
  "AWS": {
    "S3": {
      "AccessKey": "<set in env>",
      "SecretKey": "<set in env>",
      "Region": "eu-central-1",
      "BucketName": "speech-storage-bucket"
    },
    "DynamoDB": {
      "AccessKey": "<set in env>",
      "SecretKey": "<set in env>",
      "Region": "eu-central-1",
      "TableName": "storage-items"
    },
    "Transcribe": {
      "AccessKey": "<set in env>",
      "SecretKey": "<set in env>",
      "Region": "eu-central-1",
      "LanguageCode": "de-DE",
      "SampleRateHertz": 16000
    }
  },
  "OpenAI": {
    "ApiKey": "<set in env>",
    "BaseUrl": "https://api.openai.com",
    "DefaultModel": "gpt-4.1-nano-2025-04-14",
    "Temperature": 0.0
  }
}
